body.login
    display: flex
    align-items: center
    justify-content: center
    text-align: center !important
    padding-top: 40px
    padding-bottom: 40px
    background-color: #f5f5f5

    .form-signin
        width: 100%
        max-width: 330px
        padding: 15px
        margin: 0 auto

        .form-control
            position: relative
            box-sizing: border-box
            height: auto
            padding: 10px
            font-size: 16px

            &:focus
                z-index: 2
                border-color: #ff8080
                box-shadow: 0 0 0 .2rem rgba(255, 0, 0, 0.25)

            &.top
                margin-bottom: -1px
                border-bottom-right-radius: 0
                border-bottom-left-radius: 0

            &.bottom
                margin-bottom: 10px
                border-top-left-radius: 0
                border-top-right-radius: 0

.login-button
    background-color: #d32f2f
    color: #ffffff

    &:hover
        color: #fff
        background-color: #b92929
        border-color: #992121
